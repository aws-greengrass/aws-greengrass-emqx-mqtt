{
  "RecipeFormatVersion": "2020-01-25",
  "ComponentName": "aws.greengrass.clientdevices.mqtt.EMQX",
  "ComponentType": "aws.greengrass.generic",
  "ComponentDescription": "The EMQX MQTT broker component provides an MQTT v5 broker, based on the EMQX MQTT broker, for client devices to connect to your Greengrass core device.\n\nOn Windows operating systems this software includes code distributed under the Microsoft Software License Terms - Microsoft Visual Studio Community 2022. By downloading this software, you agree to that code's license terms, which can be found at https://visualstudio.microsoft.com/license-terms/vs2022-ga-community.",
  "ComponentPublisher": "AWS",
  "ComponentConfiguration": {
    "DefaultConfiguration": {
      "emqx": {
        "mqtt.max_packet_size": "268435455",
        "log.console.enabled": "true",
        "log.level": "debug",
        "listener.ssl.mtls.max_connections": "1024000",
        "listener.ssl.mtls.bind": "8883"
      },
      "accessControl": {
        "aws.greengrass.clientdevices.Auth": {
          "aws.greengrass.clientdevices.mqtt.EMQX:auth:1": {
            "policyDescription": "Access to client device auth operations.",
            "operations": [
              "aws.greengrass#SubscribeToCertificateUpdates",
              "aws.greengrass#VerifyClientDeviceIdentity",
              "aws.greengrass#GetClientDeviceAuthToken",
              "aws.greengrass#AuthorizeClientDeviceAction"
            ],
            "resources": [
              "*"
            ]
          }
        }
      },
      "crtLogLevel": "",
      "requiresPrivilege": "true",
      "restartIdentifier": "",
      "startupTimeoutSeconds": "90",
      "ipcTimeoutSeconds": "5"
    }
  },
  "ComponentDependencies": {
    "aws.greengrass.clientdevices.Auth": {
      "VersionRequirement": ">=2.2.0 <2.5.0",
      "DependencyType": "SOFT"
    }
  },
  "Manifests": [
    {
      "Platform": {
        "os": "windows"
      },
      "Lifecycle": {
        "install": {
          "script": "robocopy {artifacts:decompressedPath}\\emqx\\emqx\\plugins {work:path}\\plugins /E"
        },
        "startup": {
          "script": "{artifacts:decompressedPath}\\emqx\\emqx\\plugins\\aws_greengrass_emqx_auth-1.0.0\\aws_greengrass_emqx_auth-1.0.0\\priv\\write_config.exe && {artifacts:decompressedPath}\\emqx\\emqx\\bin\\emqx.cmd console",
          "timeout": "{configuration:/startupTimeoutSeconds}"
        },
        "EMQX_CONF1": "{configuration:/replaceConfigurationFiles}",
        "EMQX_CONF2": "{configuration:/mergeConfigurationFiles}",
        "setEnv": {
          "EMQX_LOG__TO": "{configuration:/emqx/log.to}",
          "EMQX_LOG__DIR": "{work:path}\\logs",
          "EMQX_PLUGINS__INSTALL_DIR": "{work:path}\\plugins",
          "EMQX_PLUGINS__STATES__1__NAME_VSN": "aws_greengrass_emqx_auth-1.0.0",
          "EMQX_PLUGINS__STATES__1__ENABLE": "true",
          "ORIG_EMQX_NODE__DATA_DIR": "{artifacts:decompressedPath}\\emqx\\emqx\\data",
          "ORIG_EMQX_NODE__ETC_DIR": "{artifacts:decompressedPath}\\emqx\\emqx\\etc",
          "EMQX_NODE__DATA_DIR": "{work:path}\\data",
          "EMQX_NODE__ETC_DIR": "{work:path}\\etc",
          "EMQX_LISTENERS__SSL__MTLS__BIND": "{configuration:/emqx/listener.ssl.mtls.bind}",
          "EMQX_LISTENERS__SSL__MTLS__MAX_CONNECTIONS": "{configuration:/emqx/listener.ssl.mtls.max_connections}",
          "EMQX_LISTENERS__SSL__MTLS__SSL_OPTIONS__KEYFILE": "{work:path}\\data\\key.pem",
          "EMQX_LISTENERS__SSL__MTLS__SSL_OPTIONS__CERTFILE": "{work:path}\\data\\cert.pem",
          "EMQX_LISTENERS__SSL__MTLS__SSL_OPTIONS__CACERTFILE": "",
          "EMQX_LOG__CONSOLE_HANDLER__ENABLE": "{configuration:/emqx/log.console.enabled}",
          "EMQX_LOG__CONSOLE_HANDLER__LEVEL": "{configuration:/emqx/log.level}",
          "EMQX_MQTT__MAX_PACKET_SIZE": "{configuration:/emqx/mqtt.max_packet_size}",
          "IPC_TIMEOUT_SECONDS": "{configuration:/ipcTimeoutSeconds}",
          "RESTART_IDENTIFIER": "{configuration:/restartIdentifier}",
          "CRT_LOG_LEVEL": "{configuration:/crtLogLevel}"
        },
        "shutdown": {
          "script": "{artifacts:decompressedPath}\\emqx\\emqx\\bin\\emqx.cmd stop"
        }
      },
      "Artifacts": [
        {
          "URI": "s3://BUCKET_NAME/COMPONENT_NAME/COMPONENT_VERSION/emqx.zip",
          "Unarchive": "ZIP",
          "Permission": {
            "Read": "OWNER",
            "Execute": "OWNER"
          }
        }
      ]
    },
    {
      "Platform": {
        "os": "linux"
      },
      "Lifecycle": {
        "install": {
          "script": "cp {artifacts:decompressedPath}/emqx/emqx/plugins {work:path}",
          "requiresPrivilege": true
        },
        "startup": {
          "script": "{artifacts:decompressedPath}/emqx/emqx/plugins/aws_greengrass_emqx_auth-1.0.0/aws_greengrass_emqx_auth-1.0.0/priv/write_config && {artifacts:decompressedPath}/emqx/emqx/bin/emqx console",
          "timeout": "{configuration:/startupTimeoutSeconds}",
          "requiresPrivilege": true
        },
        "EMQX_CONF1": "{configuration:/replaceConfigurationFiles}",
        "EMQX_CONF2": "{configuration:/mergeConfigurationFiles}",
        "setEnv": {
          "EMQX_LOG__TO": "{configuration:/emqx/log.to}",
          "EMQX_LOG__DIR": "{work:path}/logs",
          "EMQX_PLUGINS__INSTALL_DIR": "{work:path}/plugins",
          "EMQX_PLUGINS__STATES__1__NAME_VSN": "aws_greengrass_emqx_auth-1.0.0",
          "EMQX_PLUGINS__STATES__1__ENABLE": "true",
          "ORIG_EMQX_NODE__DATA_DIR": "{artifacts:decompressedPath}/emqx/emqx/data",
          "ORIG_EMQX_NODE__ETC_DIR": "{artifacts:decompressedPath}/emqx/emqx/etc",
          "EMQX_NODE__DATA_DIR": "{work:path}/data",
          "EMQX_NODE__ETC_DIR": "{work:path}/etc",
          "EMQX_LISTENERS__SSL__MTLS__BIND": "{configuration:/emqx/listener.ssl.mtls.bind}",
          "EMQX_LISTENERS__SSL__MTLS__MAX_CONNECTIONS": "{configuration:/emqx/listener.ssl.mtls.max_connections}",
          "EMQX_LISTENERS__SSL__MTLS__SSL_OPTIONS__KEYFILE": "{work:path}/data/key.pem",
          "EMQX_LISTENERS__SSL__MTLS__SSL_OPTIONS__CERTFILE": "{work:path}/data/cert.pem",
          "EMQX_LISTENERS__SSL__MTLS__SSL_OPTIONS__CACERTFILE": "",
          "EMQX_LOG__CONSOLE_HANDLER__ENABLE": "{configuration:/emqx/log.console.enabled}",
          "EMQX_LOG__CONSOLE_HANDLER__LEVEL": "{configuration:/emqx/log.level}",
          "EMQX_MQTT__MAX_PACKET_SIZE": "{configuration:/emqx/mqtt.max_packet_size}",
          "IPC_TIMEOUT_SECONDS": "{configuration:/ipcTimeoutSeconds}",
          "RESTART_IDENTIFIER": "{configuration:/restartIdentifier}",
          "CRT_LOG_LEVEL": "{configuration:/crtLogLevel}"
        },
        "shutdown": {
          "script": "{artifacts:decompressedPath}/emqx/emqx/bin/emqx stop"
        }
      },
      "Artifacts": [
        {
          "URI": "s3://BUCKET_NAME/COMPONENT_NAME/COMPONENT_VERSION/emqx.zip",
          "Unarchive": "ZIP",
          "Permission": {
            "Read": "OWNER",
            "Execute": "OWNER"
          }
        }
      ]
    }
  ]
}
